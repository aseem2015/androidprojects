<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.abba.passwordvault"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".PasswordVault"
            android:label="@string/title_activity_password_vault"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PassSaveAndRetrieveActivity"
            android:label="@string/title_activity_pass_save_and_retrieve" >
        </activity>
        <activity
            android:name=".RetreivePassword"
            android:label="@string/title_activity_retreive_password" >
        </activity>
        <activity
            android:name=".SavePassword"
            android:label="@string/title_activity_save_password" >
        </activity>
    </application>

</manifest>
